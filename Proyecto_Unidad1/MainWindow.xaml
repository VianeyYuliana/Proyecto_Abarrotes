<Window x:Class="Proyecto_Unidad1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Unidad1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Bienvenidos" HorizontalAlignment="Center" Margin="0,86,0,0" VerticalAlignment="Top" Height="53" Width="152" FontSize="25" Background="YellowGreen"/>
        <Label Content="Usuario" HorizontalAlignment="Center" Margin="0,165,0,0" VerticalAlignment="Top" Background="Teal" />
        <TextBox x:Name="txtUser" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Center" Width="120"/>
        <Label Content="Contraseña" HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" Background="CornflowerBlue" />
        <TextBox x:Name="txtPassword" HorizontalAlignment="Center" Margin="0,303,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button Content="Iniciar" HorizontalAlignment="Center" Margin="0,357,0,0" VerticalAlignment="Top" Background="Tomato" Click="Button_Click" Height="32" Width="70"/>

    </Grid>
</Window>
